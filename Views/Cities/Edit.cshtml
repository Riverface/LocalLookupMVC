@{
  Layout = "_Layout";
}

@model LocalLookupMVC.Models.City

<div>
  <div class='entryLabel'>
    <h2>
      Edit this City: @Html.DisplayFor(model => model.Name)
    </h2>
  </div>
  <div class='entry'>
    @using (Html.BeginForm())
    {
      
      <p>@Html.HiddenFor(model => model.CityId)</p>
      <p class='propertyLabel' style="font-weight: bold;  width:250px">@Html.LabelFor(model=>model.Name)</p>
      <p class='property' style=" width:250px">@Html.TextBoxFor(model => model.Name, new{@required = "required"})</p>
      <p class='propertyLabel' style="font-weight: bold;  width:250px">@Html.LabelFor(model => model.ZipCode)</p>
      <p class='property' style=" width:250px; ">@Html.TextBoxFor(model => model.ZipCode, new{@required = "required"})</p>
      <input type="submit" value="Save" />
    }
  </div>
</div>