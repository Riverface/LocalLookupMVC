@{
  Layout = "_Layout";
}

@using LocalLookupMVC.Solution.Models;
@model List<LocalLookupMVC.Solution.Models.Business>;

  <div>
    <div class='entryLabel'>
      <h1>Businesss</h1>
    </div>
    <div class='entry'>

        @if (Model.Any())
        {
          <table>
                <tr>
                  <th> Name  </th>
                  <th> Biography  </th>
                  <th> MIGHT </th>
                  <th> SPRY</th>
                  <th> JUDGE</th>
                  <th> ECHO</th>
                  <th> MAGNE </th>
                  <th> TUNE  </th>
                  <th> Level  </th>
                  <th> Exp</th>
                </tr>
            @foreach (Business Business in Model)
            {
              <tr style='padding: 10px; border:1px solid black'>
                    <td style="border:1px solid black; height:50px; width:100px; ">@Html.ActionLink($"{Business.Name}", "Details", "Businesss", new {id=Business.BusinessId})</td>
                    <td style="border:1px solid black; height:50px; width:600px; ">@Html.ActionLink($"{Business.Bio}", "Details", "Businesss", new {id=Business.BusinessId})</td>
                    <td style="border:1px solid black; height:50px; width: 100px;">@Html.ActionLink($"{Business.Might}", "Details", "Businesss", new {id=Business.BusinessId})</td>
                    <td style="border:1px solid black; height:50px; width: 100px;">@Html.ActionLink($"{Business.Spryness}", "Details", "Businesss", new {id=Business.BusinessId})</td>
                    <td style="border:1px solid black; height:50px; width: 100px;">@Html.ActionLink($"{Business.Judgement}", "Details", "Businesss", new {id=Business.BusinessId})</td>
                    <td style="border:1px solid black; height:50px; width: 100px;">@Html.ActionLink($"{Business.Echo}", "Details", "Businesss", new {id=Business.BusinessId})</td>
                    <td style="border:1px solid black; height:50px; width: 100px;">@Html.ActionLink($"{Business.Magnetism}", "Details", "Businesss", new {id=Business.BusinessId})</td>
                    <td style="border:1px solid black; height:50px; width: 100px;">@Html.ActionLink($"{Business.Fortune}", "Details", "Businesss", new {id=Business.BusinessId})</td>
                    <td style="border:1px solid black; height:50px; width: 100px;">@Html.ActionLink($"{Business.Level}", "Details", "Businesss", new {id=Business.BusinessId})</td>
                    <td style="border:1px solid black; height:50px; width: 100px;">@Html.ActionLink($"{Business.experience}", "Details", "Businesss", new {id=Business.BusinessId})</td>
                </tr>            
            }
            </table>
        }
        else
        {
          <h3>There are no businesss on this page or businesss haven't been added.</h3>
        }
         <p>@Html.ActionLink("Back a Page", "Index", "Businesss", new{page = ViewBag.page - 1})</p>
         <p>@Html.ActionLink("Next Page", "Index", "Businesss", new{page = ViewBag.page + 1})</p>
         <p>@Html.ActionLink("Back a Page", "Index", "Businesss", new{page = ViewBag.page - 1})</p>
         <p>@Html.ActionLink("1", "Index", "Businesss", new{page = ViewBag.page, pageCount = 1 })</p>
         <p>@Html.ActionLink("2", "Index", "Businesss", new{page = ViewBag.page, pageCount = 2})</p>
         <p>@Html.ActionLink("3", "Index", "Businesss", new{page = ViewBag.page, pageCount = 3})</p>
         <p>@Html.ActionLink("Next Page", "Index", "Businesss", new{page = ViewBag.page + 1})</p>
    </div>
  </div>

  <div>
      @if(User.Identity.IsAuthenticated)
      {
        <div class='entryLabel propertyLabel'>
          Businesss menu
        </div>
        <div class='property'>
          <p>@Html.ActionLink("Add new Business", "Create")</p>
          <p>@Html.ActionLink("Home", "Index", "Home")</p>
        </div>
      }
  </div>