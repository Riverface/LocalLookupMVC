@{
  Layout = "_Layout";
}

@using LocalLookupMVC.Models;
@model LocalLookupMVC.Models.Business

<div>
  <div class='entryLabel'>
    <h4>
      Add a new Business
    </h4>
  </div>
  <div class='entry'>

    @using (Html.BeginForm())
    {
      <p>@Html.HiddenFor(model => model.BusinessId)</p>
      <p>@Html.LabelFor(model => model.Name)</p>
      <p>@Html.TextBoxFor(model => model.Name, new { @required = "required"})</p>
      <p>@Html.LabelFor(model => model.Address)</p>
      <p>@Html.TextBoxFor(model => model.Address, new { @required = "required"})</p>
      <p>@Html.LabelFor(model => model.PhoneNumber)</p>
      <p>@Html.TextBoxFor(model => model.PhoneNumber,  new { @required = "required"})</p>
      <p>@Html.LabelFor(model => model.Blurb)</p>
      <p>@Html.TextBoxFor(model => model.Blurb, new { @required = "required"})</p>
      <p>@Html.LabelFor(model=> model.City)</p>
      <p>@Html.DropDownList("CityId")</p>
      <input type="submit" value="Add new Business" />
    }
    
  </div>
</div>
<p>@Html.ActionLink("Show all Businesses", "Index")</p>