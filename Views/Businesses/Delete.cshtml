@{
  Layout = "_Layout";
}

@model LocalLookupMVC.Models.Business

<div>
  <div class='entryLabel'>
    <h2>
      Delete
    </h2>
  </div>
  <div class="entry">
    <h2>
      Are you sure you want to delete this?
    </h2>
    @Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)
    @using (Html.BeginForm())
    {
      <input type="submit" value="Delete" />
    }
          @if(User.Identity.IsAuthenticated)
      {
        <div class='entryLabel propertyLabel'>
          Business Links
        </div>
        <div class='property'>
          <p>@Html.ActionLink("Back to Businesses", "Index")</p>
          <p>@Html.ActionLink("Edit Business", "Edit", new { id = Model.BusinessId })</p>
          <p>@Html.ActionLink("Details of Business", "Details", new { id = Model.BusinessId })</p>
        </div>
      }
  </div>
</div>
